{
  "compilerOptions": {
    "target": "ES2019",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "jsx": "react",

    "strict": true,
    "skipLibCheck": true,

    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,

    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    }
  },

  "include": ["src/**/*.ts"]
}
